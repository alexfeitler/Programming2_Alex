
<FormatLayout>:
    orientation: "vertical"
    label: label
    spinner: spinner

    Label:
        id: label
        text: "Chose Text Below"
        font_size: 100

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "Favorite Food:"
            font_size: 60
            size_hint_x: 4
        Label:
            font_size: 50
            text: 'Pizza'
        CheckBox:
            group: 'text'
            on_active: root.text_change('Pizza')
        Label:
            font_size: 50
            text: 'Pasta'
        CheckBox:
            group: 'text'
            on_active: root.text_change('Pasta')
        Label:
            font_size: 50
            text: 'Salad'
        CheckBox:
            group: 'text'
            on_active: root.text_change('Salad')

    BoxLayout:
        Label:
            text: "Choose a font:"
            font_size: 90
        Spinner:
            id: spinner
            text: "Font Type"
            font_name: "freesansbold.ttf"
            font_size: 50
            values: ["Free Sans Bold", "Test Sans"]
            on_text: root.font_change(self.text)



    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: "Green:"
            font_size: 50
            color: 0, 1, 0, 1
        Slider:
            min: 0
            max: 1
            value: 0
            step: .05
            id: green
            on_touch_move: root.change_window(red.value, self.value, blue.value)
        Label:
            text: "Red:"
            font_size: 50
            color: 1, 0, 0, 1
        Slider:
            min: 0
            max: 1
            value: 0
            step: .05
            id: red
            on_touch_move: root.change_window(self.value, green.value, blue.value)
        Label:
            text: "Blue:"
            font_size: 50
            color: 0, 0, 1, 1
        Slider:
            min: 0
            max: 1
            value: 0
            step: .05
            id: blue
            on_touch_move: root.change_window(red.value, green.value, self.value)

    BoxLayout:
        Label:
            text: "Text Color(Black/White):"
            font_size: 60
        Switch:
            active: False
            on_active: root.text_on(self.active)