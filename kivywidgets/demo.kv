<CustLabel@Label>
    color: 0, 0, 0, 1

<CustPopup@Popup>:
    size_hint_x: 1
    size_hint_y: 1
    auto_dismiss: False
    Button:
        text: "Close"
        on_press: root.dismiss()

<DemoLayout>:
    orientation: "vertical"
    id: demo
    switch_text: switch_text
    slider: slider
    slider_text: slider_text
    BoxLayout:
        orientation: "horizontal"
        CustLabel:
            id: switch_text
            text: str(switch.active)
        Switch:
            active: True
            id: switch
            on_active: root.switch_on(self, self.active)


    BoxLayout:
        orientation: "horizontal"
        CustLabel:
            id: slider_text
            text: "{:.2f}".format(slider.value)
        Slider:
            id: slider
            min: 0
            max: 1
            value: 0
            step: 0.01
            slider_change: demo.slider_change(self, self.value)
    BoxLayout:
        orientation: "horizontal"
        CustLabel:
            id: check_text
            text: "I am not a robot"
        CheckBox:
            on_active: root.check_box(self.active)
    BoxLayout:
        orientation: "horizontal"
        CustLabel:
            id: radio_text
            size_hint_x: 3
            text: "Choose your favorite:"
        CustLabel:
            text: "Ice Cream"
        CheckBox:
            group: "favorite"

        CustLabel:
            text: "Cake"
        CheckBox:
            group: "favorite"
        CustLabel:
            text: "Pie"
        CheckBox:
            size_hint_x: 0.1
            group: "favorite"
    BoxLayout:
        orientation: "horizontal"

        CustLabel:
            text: spinner.text

        Spinner:
            id: spinner
            text: "First"
            values: ["First", "Second", "Third"]
            on_text: root.spinner_clicked(self.text)